{
  "akka": {
    "actor": {
      "provider": "remote",
      "serializers": {
        "hyperion": "Akka.Serialization.HyperionSerializer, Akka.Serialization.Hyperion"
      },
      "serialization-bindings": {
        "System.Object": "hyperion"
      }
    },
    "loggers": [
      "Akka.Logger.Serilog.SerilogLogger, Akka.Logger.Serilog"
    ],
    "loglevel": "INFO",    
    "remote": {
      "dot-netty": {
        "tcp": {
          "hostname": "localhost",
          "port": 5010
        }
      }
    }
  }
}